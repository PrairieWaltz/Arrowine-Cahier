<% layout('layouts/homeboiler') %>

<div class="row">
  <h1 class="text-center">Create a Cahier</h1>
  <div class="col-6 offset-3">
    <form action="/favorites" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name: </label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="favorite[name]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="city">City: </label>
        <input class="form-control" type="text" id="city" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Email: </label>
        <div class="input-group">
          <span class="input-group-text" id="email-label">@</span>
          <input
            type="email"
            class="form-control"
            id="email"
            aria-label="email"
            aria-describedby="email-label"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="username">User Name: </label>
        <input class="form-control" type="text" id="username" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password: </label>
        <input class="form-control" type="text" id="password" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="v-password">Re-Type Password: </label>
        <input class="form-control" type="text" id="v-password" />
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Join</button>
      </div>
    </form>
    <form action="/">
      <button class="btn btn-primary">Go Back</button>
    </form>
  </div>
</div>
